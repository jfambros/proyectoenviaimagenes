<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical">
    

    <LinearLayout
        android:id="@+id/llEncabezadoIniciaSesion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#ff00c0ff" >

        <ImageView
            android:id="@+id/ivAtrasInicioSesion"
            android:src="@drawable/atras48x48" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
       
    </LinearLayout>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
        <View android:id="@+id/vLinea1InicioSesion"

        android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:background="#FFFFFF"/>
        <ImageView 
            android:id="@+id/ivLogoInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iniciosesion64x64"
            android:layout_below="@+id/vLinea1InicioSesion"
            android:layout_centerInParent="true"/>
        
        <TextView android:text="Captura tus datos para iniciar sesión"
            android:layout_below="@+id/ivLogoInicioSesion"
            android:id="@+id/tvNotaInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        

        
             <View android:id="@+id/vLinea2InicioSesion"
        android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:background="#FFFFFF"
		android:layout_below="@+id/tvNotaInicioSesion"/>   
        <TableLayout
    android:id="@+id/tableLayoutPrinInicioSesion"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/vLinea2InicioSesion"
    android:stretchColumns="1" >
 
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:gravity="center">
				<TextView  android:text="Correo electrónico: "
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"/>
				<EditText  android:id="@+id/etCorreoEInicioSesion"
				    android:layout_width="120px"
				    android:layout_height="wrap_content"
				    android:text="yo@yo.yo"/>
			</TableRow>
			
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:gravity="center">
				<TextView  android:text="Contraseña:  "
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"/>
				<EditText  android:id="@+id/etContraInicioSesion"
				    android:layout_width="120px"
				    android:layout_height="wrap_content"
				    android:inputType="textPassword"
				    android:text="qwe"
				    />				

			</TableRow>
				
		</TableLayout>
		<View android:id="@+id/vLinea3InicioSesion"
        android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:background="#FFFFFF"
		android:layout_below="@+id/tableLayoutPrinInicioSesion"/>   
		
		<Button android:id="@+id/btnIniciarSesion"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Registrar"
		    android:layout_below="@+id/vLinea3InicioSesion"
		    android:layout_centerInParent="true"/>
        
   </RelativeLayout>
    
    
 </LinearLayout>